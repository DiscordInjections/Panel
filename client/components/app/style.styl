/*
   Breakpoints:
   Extra small <576px
   Small ≥576px - 540px
   Medium ≥768px - 720px
   Large ≥992px -960px
   Extra large ≥1200px - 1140px
*/
.wrapper {
  position: relative
  display: grid
  min-height: 100vh
  grid-template: 100px 1fr 6rem / 1fr 1140px 1fr
}

.wrapper > .content {
  grid-row: 2
  grid-column: 2
}
