@keyframes download-float {
  0% {
    margin-top: 0
  }

  100% {
    margin-top: 15px
  }
}

.download {
  display: flex
  margin-top: 2rem

  > span {
    position: relative
    flex: 0 10rem
    width: 10rem
    height: 10rem
    background-image: radial-gradient(#fff4 64%, transparent 66%)
    background-position: center
    background-size: cover
    background-repeat: no-repeat
    font-size: 0

    &:before {
      position: absolute
      right: 2.5rem
      bottom: 25%
      left: 2.5rem
      border-bottom: .5rem solid #43b581
      content: ''
    }

    &:after {
      position: relative
      top: .5rem
      right: 0
      left: 0
      display: block
      color: #43b581
      content: 'â¬‡'
      text-align: center
      font-weight: bold
      font-size: 5rem
      animation: download-float 2s infinite alternate ease-in-out
    }
  }

  div {
    flex: 1
    padding-top: 1rem
    text-align: center

    button {
      position: relative
      display: inline-block
      flex: 1
      margin: .5rem
      width: 4.5rem
      height: 4.5rem
      border: transparent
      border-radius: 3px
      background: white
      box-shadow: 1px 1px 3px #fffc
      color: #333
      font-size: 2rem
      cursor: pointer

      &:hover {
        top: 2px
        box-shadow: none
      }

      &.manual {
        margin-left: 2rem
      }

      .description {
        font-size: 0
      }
    }
  }
}

ul.features {
  display: flex
  margin: 0
  padding: 0

  li {
    display: inline-block
    flex: 1
    padding: 0 .5rem
  }
}
