.page-plugins {
  display: grid
  grid-template: 4rem 3rem auto / 1fr 4fr
  grid-gap: 1rem

  h1 {
    grid-column: 1 / span 2
  }

  .categories {
    padding: 0
    grid-row: 2 / span 2

    > div {
      padding: 0 .5rem
      border: 1px solid transparent // add a transparent border, so padding gets rendered
      background: #0005

      h2 {
        text-transform: uppercase
        font-weight: bold
        font-size: .8rem
      }

      ul {
        padding: 0 .5rem

        li,
        li a {
          display: block
        }

        li a {
          margin-bottom: .5rem
          padding: .5rem
          border-radius: 5px
          text-decoration: none

          span {
            margin-right: .5em
          }

          &.active {
            background-color: #7289da
          }
        }
      }
    }
  }

  .filter {
    padding: .5rem
    background: #0005

    h2 {
      font-size: 0
    }

    > div {
      display: flex

      .search {
        position: relative
        order: 1
        margin-left: auto
        padding-right: .1rem

        span {
          position: absolute
          right: -.1rem
          font-size: 0

          &:before {
            margin-right: .5rem
            padding-top: .25rem
            font-size: 1.5rem
          }
        }

        input {
          position: relative
          top: .25rem
          padding: .2rem 1.4rem .2rem .2rem
          border: none
          border-radius: 4px
          background: #fff4
          color: #fffa
        }
      }

      .rating {
        margin-top: .3rem
      }
    }
  }

  .list {
    padding: .5rem
    background: #0005
  }
}
