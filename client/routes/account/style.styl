.page-account {
  display: grid
  grid-template-columns: 1fr 1fr
  grid-gap: 1rem

  > div > div {
    margin-bottom: 1rem
    padding: 0 .5rem .5rem
    border: 1px solid transparent // add a transparent border, so padding gets rendered
    background: #0005

    h2 {
      text-transform: uppercase
      font-weight: bold
      font-size: .8rem
    }
  }

  .profile {
    overflow: hidden
    width: auto
    height: 5rem
    border-radius: 20%
  }

  .accounts {
    /* &:after {
       display: block
       clear: both
       content: ''
       } */
    display: flex
    flex-flow: row wrap

    > h2 {
      // hack to get headline into its own line
      flex: 0 100%
    }

    > div {
      position: relative
      flex: 0 5rem
      margin-right: 1rem
      height: 5rem
      border-radius: 20%

      &:last-child {
        margin-right: 0
      }

      &:hover:after {
        opacity: .8
      }

      &:after {
        position: absolute
        top: 0
        right: 0
        bottom: 0
        left: 0
        border-radius: 20%
        background: #000 no-repeat left
        background-size: contain
        content: ''
        opacity: 0
        transition: all .2s ease
        pointer-events: none
      }

      .username {
        position: absolute
        top: calc(100% + .5rem)
        left: 0
        padding: .5rem
        border-radius: .5rem
        background: #000c
        white-space: nowrap
        opacity: 0
        transition: all .2s ease

        &:before {
          position: absolute
          top: -.5rem
          left: 1rem
          width: 1rem
          height: 1rem
          background: inherit
          content: ''
          clip-path: polygon(50% 0, 0 50%, 100% 50%)
        }
      }

      &:hover .username {
        opacity: .8
      }

      &.connect a {
        display: block
        padding-top: 3.5rem
        height: 100%
        color: #eee
        text-align: center
        text-decoration: none
        text-shadow: 0 0 3px black
      }
    }

    .discord:after {
      background-image: url('./img/discord.svg')
    }

    .github:after {
      background-image: url('./img/github.svg')
    }

    .github.connect:after {
      z-index: -1
      opacity: .8
    }
  }
}
