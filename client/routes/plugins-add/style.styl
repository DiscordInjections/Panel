.page-plugins-add {
  display: grid
  grid-template: 4rem auto / 1fr 4fr
  grid-gap: 1rem

  h1 {
    grid-column: 1 / span 2
  }

  .categories {
    padding: 0
    grid-row: 2 / span 2

    > div {
      padding: 0 .5rem
      border: 1px solid transparent // add a transparent border, so padding gets rendered
      background: #0005

      h2 {
        text-transform: uppercase
        font-weight: bold
        font-size: .8rem
      }

      ul {
        padding: 0 .5rem

        li,
        li a {
          display: block
        }

        li a {
          margin-bottom: .5rem
          padding: .5rem
          border-radius: 5px
          text-decoration: none

          span {
            margin-right: .5em
          }

          &.active {
            background-color: #7289da
          }
        }
      }
    }
  }

  .list {
    position: relative
    margin: 0
    padding: .5rem
    background: #0005
    grid-column: 2 / span 1
    grid-row: 2 / span 1

    h2 {
      margin-top: .5rem
      text-transform: uppercase
      font-weight: bold
      font-size: 1.2rem
    }

    .repo {
      position: relative
      margin: 1rem .5rem
      padding: .25rem .5rem
      border-radius: 5px
      background: #fff2
      cursor: pointer

      > :first-child {
        margin-top: .5rem
      }
    }
  }
}
